{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "babel-eslint",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "global-require": 0,
        "no-restricted-globals": [
            "error",
            "event"
        ],
        "indent": [
            2,
            2
        ],
        "array-bracket-spacing": [
            2,
            "always"
        ],
        "object-curly-spacing": [
            2,
            "always"
        ],
        "computed-property-spacing": [
            2,
            "always"
        ],
        "no-multiple-empty-lines": [
            2,
            {
                "max": 1,
                "maxEOF": 0,
                "maxBOF": 0
            }
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "no-use-before-define": [
            2,
            {
                "functions": false
            }
        ],
        "prefer-const": 1,
        "complexity": [
            1,
            5
        ]
    },
    "plugins": [
        "prettier"
    ]
}